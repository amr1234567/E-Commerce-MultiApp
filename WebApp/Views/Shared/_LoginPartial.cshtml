@using Microsoft.AspNetCore.Identity

@inject SignInManager<AccountIdentityUser> SignInManager
@inject UserManager<AccountIdentityUser> UserManager

<div class="side-bar">
@if (SignInManager.IsSignedIn(User))
{
        <div class="signed-in-box">
            <div class="imageBox">
            @if (UserManager.GetUserAsync(User).Result?.ProfilePicture != null)
            {
                <img id="profileImage"
                alt="profile image"
                src="data:image/*;base64,@Convert.ToBase64String(UserManager.GetUserAsync(User).Result?.ProfilePicture))" />
            }else{
                <img id="profileImage"
                    alt="profile image"
                    src="~/images/Anonymous-Profile.jpeg" />
            }
            </div>
            <div>
                <a
                    id="manage" 
                    class="nav-link text-dark" 
                    asp-area="Identity" 
                    asp-page="/Account/Manage/Index" 
                    title="Manage">
                    Hello @UserManager.GetUserName(User)!
                </a>
                <a class="email-link">
                    @User?.FindFirst("email")?.Value
                </a>
            </div>
        </div>
}
else
{
        <div class="signed-in-up-box">
            <img id="profileImage"
                 alt="profile image"
                 src="~/images/Anonymous-Profile.jpeg" />
            <p>Welcome To @ViewData["title"] </p>
        </div>
}
    <div class="navbar-links">
        <ul class="navbar-nav flex-grow-1">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item-side-bar">
                    <a 
                        class="nav-link text-dark"
                        asp-controller="Home"
                        asp-action="Index">
                        Home
                    </a>
                </li>
                <li class="nav-item-side-bar">
                    <a
                        class="nav-link text-dark"
                        asp-controller="Product"
                        asp-action="Index">
                        Product
                    </a>
                </li>
                <li class="nav-item-side-bar">
                    <a 
                        class="nav-link text-dark" 
                        asp-controller="Category"
                        asp-action="Index">
                        Category
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item-side-bar">
                    <a 
                        class="nav-link text-dark"
                        id="login"
                        asp-area="Identity"
                        asp-page="/Account/Login">
                        Login
                    </a>
                </li>
                <li class="nav-item-side-bar">
                    <a 
                        class="nav-link text-dark"
                        id="register"
                        asp-area="Identity"
                        asp-page="/Account/Register">
                        Register
                    </a>
                </li>
            }
        </ul>

    </div>
    <footer class="side-bar-footer">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item-side-bar">
                <form 
                    id="logoutForm" 
                    class="form-inline"
                    asp-area="Identity" 
                    asp-page="/Account/Logout"
                    asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button
                        id="logout" 
                        type="submit" 
                        class="nav-link btn btn-link text-dark border-0">
                        Logout
                    </button>
                </form>
            </li>
        }
        <div class="coprright">
            CopyRight - &copy;Amr Shalaby @DateTime.Now.Year
        </div>
    </footer>


</div>