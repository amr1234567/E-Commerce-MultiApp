@model Core.Rate

@{
    ViewData["Title"] = "Delete";
    var productId = (int)ViewBag.productId;
}

<dl class="row" hidden>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProductId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProductName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.RateNum)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RateNum)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Comment)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Comment)
    </dd>
</dl>
<h3>Are you sure you want to delete this?</h3>
<br/>
<div class="card">
    <h5 class="card-header">@Html.DisplayFor(model => model.ProductName)</h5>
    <div class="card-body">
        <h5 class="card-title"> @Html.DisplayFor(model => model.RateNum)</h5>
        <p class="card-text">@Html.DisplayFor(model => model.Comment)</p>
        <form asp-action="Delete" asp-route-productId="@productId">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @* @Html.ActionLink("Back to Rate List", "GetRatesPerProduct", "Rate", new { id = Model.ProductId }) *@
        </form>
    </div>
</div>

