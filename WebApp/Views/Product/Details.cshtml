@model Core.Product
@inject IGetCategoryByIdUseCase getCategory
@inject IGetRateListByProductIdUseCase getRate

@{
    ViewData["Title"] = "Details";
    var rates = getRate.Execute(Model.Id);
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Category Name
        </dt>
        <dd class = "col-sm-10">
            @getCategory.Execute(Model.CategoryId)?.Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rate)
        </dd>
            @if (rates != null)
            {
                if (rates.Count() > 0)
                {
                     <dt>
                        @Html.ActionLink("Show Rates", "GetRatesPerProduct", "Rate", new { id = Model.Id })
                    </dt>
                }
                else
                {
                    <dt class="card">
                        <div class="card-body">
                            No Rates Or Comments For This Product.
                        </div>
                    </dt>
                }
            }
            else
            {
                <dt class="card">
                    <div class="card-body">
                        No Rates Or Comments For This Product.
                    </div>
                </dt>
            }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Id }) |
    @Html.ActionLink("Add Rate", "Create","Rate", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
